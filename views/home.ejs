    <!-- Scripts -->
    <script>
      const menuBtn = document.getElementById("menuButton");
      const menu = document.getElementById("dropdownMenu");
      const likeBtn = document.getElementById("likeBtn");
      const heartIcon = document.getElementById("heartIcon");
      const shareBtn = document.getElementById('shareBtn');
    const shareModal = document.getElementById('shareModal');
    const closeModal = document.getElementById('closeModal');
    const searchInput = document.getElementById('searchInput');
    const userItems = document.querySelectorAll('.user-item');
      let commentTimeout = null;

      menuBtn.addEventListener("click", () => menu.classList.toggle("hidden"));
      window.addEventListener("click", (e) => {
        if (!menu.contains(e.target) && !menuBtn.contains(e.target)) {
          menu.classList.add("hidden");
        }
      });

      likeBtn.addEventListener("click", () => {
        heartIcon.classList.toggle("text-red-500");
        heartIcon.classList.toggle("text-gray-700");
      });
      // document.getElementById('commentBtn').addEventListener('click', () => {
      //   const commentBox = document.getElementById('btn-comment');
      //   commentBox.classList.remove('hidden');
      //   if (commentTimeout) clearTimeout(commentTimeout);
      //   commentTimeout = setTimeout(() => {
      //     commentBox.classList.add('hidden');
      //   }, 60000);
      // });
      document.getElementById('commentBtn').addEventListener('click', () => {
       const commentSection = document.getElementById('btn-comment');
        commentSection.classList.toggle('hidden'); // Toggle hidden class
      });

      document
        .getElementById("postCommentBtn")
        .addEventListener("click", () => {
          const input = document.getElementById("commentInput");
          const comment = input.value.trim();
          if (comment !== "") {
            alert(`Posted comment: ${comment}`); // Replace this with logic to add comment in UI
            input.value = "";
          }
        });
        document.getElementById('shareBtn').addEventListener('click',()=>{
          document.getElementById('shareSection').style.display='block';
        })
        shareBtn.addEventListener('click', () => {
      shareModal.classList.toggle('hidden');
    });

    closeModal.addEventListener('click', () => {
      shareModal.classList.add('hidden');
    });

    // Filter users on search
    searchInput.addEventListener('input', () => {
      const searchTerm = searchInput.value.toLowerCase();

      userItems.forEach(item => {
        const username = item.getAttribute('data-username');
        if (username.includes(searchTerm)) {
          item.style.display = 'flex';
        } else {
          item.style.display = 'none';
        }
      });
    });
