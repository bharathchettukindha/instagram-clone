<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Profile | InstaClone</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-white text-gray-800">
    <div class="flex flex-col md:flex-row min-h-screen">
      <!-- Sidebar -->
       <aside class="bg-stone-50 w-[100px] min-h-screen">
      <a href="/" class="m-20">
        <img
          src="/images/insta1.webp"
          alt="insta"
          class="w-10 h-10 mx-auto mt-5 p-1.5"
        />
      </a>
      <a href="/home"
        ><img src="/images/home.webp" class="w-12 h-12 mx-auto mt-5 p-1"
      /></a>
      <a href="/search"
        ><img src="/images/seach.webp" class="w-12 h-12 mx-auto mt-7 p-2"
      /></a>
      <a href="/explore"
        ><img src="/images/comapss.png" class="w-12 h-12 mx-auto mt-7 p-1.5"
      /></a>
      <a href="/reel"
        ><img src="/images/reel2.png" class="w-12 h-12 mx-auto mt-8 p-1.5"
      /></a>
      <a href="/messages"
        ><img src="/images/images.png" class="w-12 h-12 mx-auto mt-6 p-1"
      /></a>
      <a href="/likes"
        ><img src="/images/like.png" class="w-12 h-12 mx-auto mt-8 p-1"
      /></a>
      <a href="/postcreate"
        ><img src="/images/create.png" class="w-12 h-12 mx-auto mt-6 p-1"
      /></a>
      <a href="/profile"
        ><img
          src="/images/buddies.webp"
          class="w-12 h-12 rounded-full mx-auto mt-8"
      /></a>

      <!-- Menu Button -->
      <div class="relative inline-block text-left mx-auto mt-5 w-10 ml-7">
        <a
          id="menuButton"
          class="w-10 h-10 flex items-center justify-center text-3xl cursor-pointer"
          >‚ò∞</a
        >
        <div
          id="dropdownMenu"
          class="hidden absolute left-0 bottom-full mb-2 w-56 bg-white border border-gray-200 rounded shadow-lg z-[50]"
        >
          <div class="py-1 text-l text-gray-700">
            <a href="#" class="flex px-4 py-2 hover:bg-gray-100">‚öôÔ∏è Settings</a>
            <a href="#" class="flex px-4 py-2 hover:bg-gray-100"
              >üóÇÔ∏è Your activity</a
            >
            <a href="#" class="flex px-4 py-2 hover:bg-gray-100">üîñ Saved</a>
            <a href="#" class="flex px-4 py-2 hover:bg-gray-100"
              >üåû Switch appearance</a
            >
            <a href="#" class="flex px-4 py-2 hover:bg-gray-100"
              >‚ùó Report a problem</a
            >
            <div class="border-t my-2"></div>
            <a href="#" class="flex px-4 py-2 hover:bg-gray-100">üßµ Threads</a>
            <a href="#" class="flex px-4 py-2 hover:bg-gray-100"
              >Switch accounts</a
            >
            <a
              href="/logout"
              class="flex px-4 py-2 text-red-600 hover:bg-gray-100"
              >Log out</a
            >
          </div>
        </div>
      </div>
    </aside>

      <!-- Main Content -->
      <main class="flex-1 max-w-6xl mx-auto p-4 sm:p-6">
        <!-- Profile Header -->
        <div class="flex flex-col sm:flex-row items-center justify-between mb-8 gap-4 sm:gap-0">
          <div class="flex items-center space-x-4 sm:space-x-6">
            <img id="avatar" class="w-20 h-20 sm:w-24 sm:h-24 rounded-full border object-cover" alt="Profile Picture" />
            <div class="text-center sm:text-left">
              <h2 id="username" class="text-xl sm:text-2xl font-bold"></h2>
              <p id="bio" class="text-gray-600"></p>
            </div>
          </div>
          <button class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 w-full sm:w-auto">
            Edit Profile
          </button>
        </div>

        <!-- Stats -->
        <div class="flex justify-around text-center mb-8">
          <div>
            <p id="post-count" class="font-bold text-lg">0</p>
            <p class="text-gray-500">Posts</p>
          </div>
          <div>
            <p id="follower-count" class="font-bold text-lg">0</p>
            <p class="text-gray-500">Followers</p>
          </div>
          <div>
            <p id="following-count" class="font-bold text-lg">0</p>
            <p class="text-gray-500">Following</p>
          </div>
        </div>

        <!-- Posts Grid -->
        <div id="post-grid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4"></div>
      </main>
    </div>

    <script>
      // Mock User Data
      const user = {
        username: "bharath_007",
        bio: "üë®‚Äçüíª Full Stack Dev | ‚òï Coffee Lover",
        avatar: "https://i.pravatar.cc/300?img=12",
        followers: 228,
        following: 341,
      };

      const posts = [
        "https://source.unsplash.com/random/300x300/?nature,1",
        "https://source.unsplash.com/random/300x300/?beach,2",
        "https://source.unsplash.com/random/300x300/?mountain,3",
        "https://source.unsplash.com/random/300x300/?city,4",
        "https://source.unsplash.com/random/300x300/?cat,5",
        "https://source.unsplash.com/random/300x300/?food,6",
      ];

      // Inject data
      document.getElementById("username").innerText = user.username;
      document.getElementById("bio").innerText = user.bio;
      document.getElementById("avatar").src = user.avatar;
      document.getElementById("follower-count").innerText = user.followers;
      document.getElementById("following-count").innerText = user.following;
      document.getElementById("post-count").innerText = posts.length;

      const postGrid = document.getElementById("post-grid");
      posts.forEach((imgUrl) => {
        const img = document.createElement("img");
        img.src = imgUrl;
        img.alt = "Post";
        img.className = "w-full h-full object-cover hover:scale-105 transition duration-200";
        const div = document.createElement("div");
        div.className = "aspect-square overflow-hidden";
        div.appendChild(img);
        postGrid.appendChild(div);
      });

      // Dropdown toggle
      document.getElementById("menuButton").addEventListener("click", () => {
        const menu = document.getElementById("dropdownMenu");
        menu.classList.toggle("hidden");
      });
    </script>
  </body>
</html>
